page {
  --blue: #21da6d;
  --white-1: #adadad;
  --white-2: #E5FFFFFF;
  --black-1: #2a2929;
  --black-2: #1c1c1c;
}
page .container {
  background-image: linear-gradient(var(--blue) 35%, var(--black-2) 45%);
}
page .container .overlay-popup {
  background: var(--white-1);
}
page .container .name {
  display: flex;
}
page .container .name image {
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
}
page .container .name .name-title {
  line-height: 2rem;
  padding-left: 20rpx;
  font-size: 40rpx;
  font-family: 幼圆;
  font-weight: bold;
}
page .container .card {
  margin-bottom: 20rpx;
  background-color: var(--black-1);
  text-align: center;
  color: var(--blue);
  border-radius: 15rpx;
  padding: 15rpx;
}
page .container .card .item {
  display: flex;
}
page .container .card .item .item-content {
  flex-grow: 1;
}
page .container .card .item .item-content .text {
  margin-top: 15rpx;
  font-size: 30rpx;
  margin-bottom: 15rpx;
}
page .container .card .item .item-content .text2 {
  margin-top: 15rpx;
  font-size: 26rpx;
  margin-bottom: 15rpx;
  color: var(--white-1);
}
page .container .swiper-box {
  border-radius: 10rpx;
  overflow: hidden;
  transform: translateY(0);
}
page .container .swiper-box .swiper {
  width: 100%;
}
page .container .swiper-box .swiper .swiper-item .swiper-image {
  width: 100%;
  height: 100%;
}
page .container .number-row {
  padding: 20rpx 40rpx 0 40rpx;
  display: flex;
  justify-content: space-between;
}
page .container .number-row .number-title {
  color: var(--white-1);
  text-align: left;
  font-size: 26rpx;
}
page .container .number-row .progress {
  padding-top: 15rpx ;
  width: 300rpx;
}
page .container .number-row .number {
  color: var(--blue);
}
page .container .address {
  color: var(--white-2);
  text-align: left;
}
page .container .address .detail {
  margin: 10rpx 0;
  font-size: 22rpx;
  color: var(--white-1);
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}
page .container .address .icon {
  text-align: right;
  color: var(--blue);
  letter-spacing: 20rpx;
}
